<Window x:Class="weatherapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:weatherapp"
        mc:Ignorable="d"
        Title="Weather" Height="600" Width="350" MinHeight="600" MinWidth="350">
    <Grid>
        <Grid>
            <Image Source="/Resources/Weatherbg/sky.png" Stretch="UniformToFill"/>
            <Rectangle>
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#30000000" Offset="0.0"/>
                        <GradientStop Color="#60000000" Offset="1.0"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
        </Grid>
        
        <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="16,16,16,32">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <TextBlock x:Name="Location" Text="Eindhoven" Foreground="White" FontSize="30" FontWeight="Light" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <Image x:Name="MainWeatherIcon" Width="80" Height="80" HorizontalAlignment="Center" Margin="0,10,0,10" Source="/Resources/CloudIcons/Clear.png"/>
                    <TextBlock x:Name="Temperature" Text="66°" Foreground="White" FontSize="85" FontWeight="UltraLight" HorizontalAlignment="Center" Margin="0,-15,0,0"/>
                    <TextBlock x:Name="WeatherDesc" Text="Mostly Sunny" Foreground="White" FontSize="20" FontWeight="Medium" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                    <TextBlock x:Name="HighLow" Text="H:85°  L:55°" Foreground="White" FontSize="16" FontWeight="Light" HorizontalAlignment="Center" Opacity="0.9"/>
                </StackPanel>

                <Border Grid.Row="2" Background="#50FFFFFF" CornerRadius="20" Padding="16,14" MinHeight="60" Effect="{DynamicResource DropShadowEffect}">
                    <TextBlock x:Name="Summary" Text="Sunny conditions will continue all day. Wind gusts are up to 7 mph." 
                              Foreground="Black" FontSize="13" FontWeight="Medium" TextWrapping="Wrap" VerticalAlignment="Center"/>
                </Border>

                <Border Grid.Row="4" Background="#50FFFFFF" CornerRadius="20" Padding="12,10" Height="90" Effect="{DynamicResource DropShadowEffect}">
                    <ScrollViewer x:Name="HourlyScrollViewer" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled" PreviewMouseWheel="HourlyScrollViewer_PreviewMouseWheel">
                        <StackPanel Orientation="Horizontal">
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <Border Grid.Row="6" Background="#50FFFFFF" CornerRadius="20" Padding="16,14" Effect="{DynamicResource DropShadowEffect}">
                    <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel>
                            <Grid Margin="0,0,0,10">
                                <TextBlock Text="10-DAY FORECAST" Foreground="#666666" FontSize="12" FontWeight="SemiBold" HorizontalAlignment="Left"/>
                            </Grid>

                            <Grid Margin="0,4,0,4" Height="28">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="32"/>
                                    <ColumnDefinition Width="32"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Today" Grid.Column="0" Foreground="Black" FontSize="15" FontWeight="Medium" VerticalAlignment="Center"/>
                                <Image Source="/Resources/CloudIcons/Clear.png" Grid.Column="1" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="0%" Grid.Column="2" Foreground="#007AFF" FontSize="13" FontWeight="Medium" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                
                                <Grid Grid.Column="3" Margin="12,0" VerticalAlignment="Center">
                                    <Rectangle Height="4" Fill="#E0E0E0" RadiusX="2" RadiusY="2"/>
                                    <Rectangle Height="4" Fill="#FF9500" RadiusX="2" RadiusY="2" Width="60" HorizontalAlignment="Left"/>
                                </Grid>
                                <TextBlock Text="55°" Grid.Column="4" Foreground="#666666" FontSize="15" FontWeight="Medium" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                <TextBlock Text="85°" Grid.Column="5" Foreground="Black" FontSize="15" FontWeight="Medium" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                            </Grid>

                            <Grid Margin="0,4,0,4" Height="28">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="32"/>
                                    <ColumnDefinition Width="32"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Thu" Grid.Column="0" Foreground="Black" FontSize="15" FontWeight="Medium" VerticalAlignment="Center"/>
                                <Image Source="/Resources/CloudIcons/partlycloudy.png" Grid.Column="1" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="10%" Grid.Column="2" Foreground="#007AFF" FontSize="13" FontWeight="Medium" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                
                                <Grid Grid.Column="3" Margin="12,0" VerticalAlignment="Center">
                                    <Rectangle Height="4" Fill="#E0E0E0" RadiusX="2" RadiusY="2"/>
                                    <Rectangle Height="4" Fill="#FF9500" RadiusX="2" RadiusY="2" Width="55" HorizontalAlignment="Left"/>
                                </Grid>
                                <TextBlock Text="56°" Grid.Column="4" Foreground="#666666" FontSize="15" FontWeight="Medium" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                <TextBlock Text="82°" Grid.Column="5" Foreground="Black" FontSize="15" FontWeight="Medium" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                            </Grid>
                            
                            <Grid Margin="0,4,0,4" Height="28">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="32"/>
                                    <ColumnDefinition Width="32"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Fri" Grid.Column="0" Foreground="Black" FontSize="15" FontWeight="Medium" VerticalAlignment="Center"/>
                                <Image Source="/Resources/CloudIcons/Clear.png" Grid.Column="1" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="0%" Grid.Column="2" Foreground="#007AFF" FontSize="13" FontWeight="Medium" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                
                                <Grid Grid.Column="3" Margin="12,0" VerticalAlignment="Center">
                                    <Rectangle Height="4" Fill="#E0E0E0" RadiusX="2" RadiusY="2"/>
                                    <Rectangle Height="4" Fill="#FF9500" RadiusX="2" RadiusY="2" Width="65" HorizontalAlignment="Left"/>
                                </Grid>
                                <TextBlock Text="58°" Grid.Column="4" Foreground="#666666" FontSize="15" FontWeight="Medium" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                <TextBlock Text="84°" Grid.Column="5" Foreground="Black" FontSize="15" FontWeight="Medium" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                            </Grid>

                            <Grid Margin="0,4,0,4" Height="28">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="32"/>
                                    <ColumnDefinition Width="32"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Sat" Grid.Column="0" Foreground="Black" FontSize="15" FontWeight="Medium" VerticalAlignment="Center"/>
                                <Image Source="/Resources/CloudIcons/Cloudy.png" Grid.Column="1" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="20%" Grid.Column="2" Foreground="#007AFF" FontSize="13" FontWeight="Medium" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                
                                <Grid Grid.Column="3" Margin="12,0" VerticalAlignment="Center">
                                    <Rectangle Height="4" Fill="#E0E0E0" RadiusX="2" RadiusY="2"/>
                                    <Rectangle Height="4" Fill="#FF9500" RadiusX="2" RadiusY="2" Width="58" HorizontalAlignment="Left"/>
                                </Grid>
                                <TextBlock Text="60°" Grid.Column="4" Foreground="#666666" FontSize="15" FontWeight="Medium" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                <TextBlock Text="79°" Grid.Column="5" Foreground="Black" FontSize="15" FontWeight="Medium" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                            </Grid>

                            <Grid Margin="0,4,0,4" Height="28">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="32"/>
                                    <ColumnDefinition Width="32"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Sun" Grid.Column="0" Foreground="Black" FontSize="15" FontWeight="Medium" VerticalAlignment="Center"/>
                                <Image Source="/Resources/CloudIcons/Rain.png" Grid.Column="1" Width="22" Height="22" VerticalAlignment="Center"/>
                                <TextBlock Text="60%" Grid.Column="2" Foreground="#007AFF" FontSize="13" FontWeight="Medium" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                
                                <Grid Grid.Column="3" Margin="12,0" VerticalAlignment="Center">
                                    <Rectangle Height="4" Fill="#E0E0E0" RadiusX="2" RadiusY="2"/>
                                    <Rectangle Height="4" Fill="#FF9500" RadiusX="2" RadiusY="2" Width="50" HorizontalAlignment="Left"/>
                                </Grid>
                                <TextBlock Text="52°" Grid.Column="4" Foreground="#666666" FontSize="15" FontWeight="Medium" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                <TextBlock Text="72°" Grid.Column="5" Foreground="Black" FontSize="15" FontWeight="Medium" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </ScrollViewer>
        
        <Grid.Resources>
            <DropShadowEffect x:Key="DropShadowEffect" Color="Black" BlurRadius="20" ShadowDepth="4" Opacity="0.25"/>
        </Grid.Resources>
    </Grid>
</Window>
